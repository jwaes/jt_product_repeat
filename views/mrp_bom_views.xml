        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_row')]" position="after">
                <field name="surface_uom" invisible="1"/>
                <label for="surface"/>
                    <div class="o_row" name="surface">
                        <field name="surface"/>
                        <span>mÂ²</span>
                    </div>                
            </xpath>
        </field>
    </record>
    
</odoo>