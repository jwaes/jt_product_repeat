<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field name="bottle_equivalent" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='volume']" position="after">
                
                <!-- 
                <label for="density" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="density" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                        <field name="density" string="Volume" class="oe_inline" attrs="{'required':[('recycled_product','=',True)]}"/>
                        <field name="density_uom_name"/>
                    </div> -->
                <label for="thickness" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="thickness" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                        <field name="thickness" string="Thickness" class="oe_inline" attrs="{'required':[('recycled_material_id','!=',False)]}"/>
                        mm
                    </div>
                <field name="recycled_material_id"/>
                <label for="bottle_equivalent" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="bottle_equivalent" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                        <field name="bottle_equivalent" string="Equivalent" class="oe_inline" attrs="{'required':[('recycled_material_id','!=',False)]}"/>
                        bottles
                    </div>                                                 
            </xpath>
        </field>
    </record>

    <record id="product_search_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view" />
        <field name="arch" type="xml">
            <field name="pricelist_id" position="after">
                <field name="recycled_material_id" />
            </field>
        </field>
    </record>
</odoo>
